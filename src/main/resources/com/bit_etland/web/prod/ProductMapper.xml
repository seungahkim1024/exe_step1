<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit_etland.web.prod.ProductMapper">
<resultMap id="result" type="hashmap">
  <id property="productId" column="PRODUCT_ID" />
  <result property="productName" column="PRODUCT_NAME"/>
  <result property="supplierId" column="SUPPLIER_ID"/>
  <result property="unit" column="UNIT"/>
  <result property="price" column="PRICE"/>
  <result property="categoryId" column="CATEGORY_ID"/>
  <result property="photo" column="PHOTO"/>
</resultMap>

  <select id="countAllProduct" resultType="int"> <!-- resultType은 리턴타입이 있을 때 준다. -->
	SELECT COUNT(*) FROM PRODUCTS
  </select>
  
  <select id="selectProductList" resultMap="result"
  								 parameterType="com.bit_etland.web.cmm.Proxy">
  	SELECT P.*, @ROWNUM := @ROWNUM + 1 AS ROWNUM
	FROM PRODUCTS P, (select @ROWNUM := 0) A
	ORDER BY ROWNUM DESC
	LIMIT #{startRow}, #{pageSize};
  
  </select>
</mapper>